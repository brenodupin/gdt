[flake8]
# Maximum line length - bioinformatics often has longer lines due to file paths and complex expressions
max-line-length = 88

# Ignore specific error codes commonly encountered in bioinformatics
ignore = 
    # E203: whitespace before ':' (conflicts with black formatter)
    E203,
    # W503: line break before binary operator (conflicts with PEP 8 update)
    W503,
    # E501: line too long (handled by max-line-length)
    E501,
    # F401: module imported but unused (common in __init__.py files)
    F401

# Exclude common directories and files
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .tox,
    venv,
    env,
    .venv,
    .env,
    build,
    dist,
    *.egg-info,
    # Common bioinformatics data directories
    img,
    logs,
    reports,
    resources,
    sandbox,
    data,
    results,
    output,
    references,
    # Jupyter notebook checkpoints
    .ipynb_checkpoints,
    # R related files if you have mixed projects
    .Rproj.user

# Maximum complexity for functions - bioinformatics can have complex algorithms
max-complexity = 15

# Enable additional checks
select = E,W,F,C

# Per-file ignores for specific patterns common in bioinformatics
per-file-ignores = 
    # __init__.py files often have unused imports for convenience
    __init__.py:F401, F403
    # Test files may have longer lines and unused imports
    test_*.py:E501,F401,
    tests/*.py:E501,F401,
    # Scripts may have unused imports and longer lines
    scripts/*.py:F401,E501,
    # Notebooks converted to .py may have issues
    notebooks/*.py:E501,F401,W291,W293

# Enable docstring checks (optional - uncomment if you want strict docstring enforcement)
# docstring-convention = numpy

# Show source code for each error
show-source = True

# Count the number of occurrences of each error/warning code
statistics = True